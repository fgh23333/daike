<view class="container">
	<view class="title">绑定新手机号</view>
	<view class="formContainer">
		<form class="phoneForm">
			<view class="cover">
				<input type="number" class="inputbox" id="phone" placeholder="请输入手机号" placeholder-class="placeholderStyle" />
			</view>
			<view class="cover">
				<input type="number" class="inputbox" id="code" placeholder="请输入验证码" placeholder-class="placeholderStyle" />
			</view>
			<button class="getCode">获取验证码</button>
		</form>
	</view>
	<button class="submit">确认修改</button>
</view>